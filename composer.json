{
    "name": "bookbok/book-info-scraper",
    "description": "Provides an interface to help fetch book information from the book API.",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "kento-oka",
            "email": "kento-oka@kentoka.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-mbstring": "*",
        "psr/event-dispatcher": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "BookBok\\BookInfoScraper\\": "src"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.18",
        "phpunit/phpunit": "^8.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "phpcs":"phpcs",
        "phpcbf":"phpcbf",
        "phpstan": "phpstan analyse src --level=max",
        "phpunit": "phpunit"
    }
}
